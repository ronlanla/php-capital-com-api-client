{
    "name": "capital-com/api-client",
    "description": "PHP client library for Capital.com API",
    "type": "library",
    "license": "MIT",
    "keywords": ["capital.com", "trading", "api", "client", "forex", "cfd"],
    "homepage": "https://github.com/capital-com/php-capital-com-api",
    "authors": [
        {
            "name": "Capital.com API Client Contributors"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "ext-openssl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^5.0 || ^6.0"
    },
    "suggest": {
        "react/event-loop": "For WebSocket support",
        "ratchet/pawl": "For WebSocket client implementation"
    },
    "autoload": {
        "psr-4": {
            "CapitalCom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CapitalCom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}